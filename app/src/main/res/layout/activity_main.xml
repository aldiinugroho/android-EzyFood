<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FFFFFF">
<!--banner-->
    <RelativeLayout
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/banner"
            android:layout_centerInParent="true">

        </ImageView>

    </RelativeLayout>
<!--main item-->
    <RelativeLayout
        android:layout_below="@id/banner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/whiteround"
        android:layout_marginTop="-20dp">

        <GridLayout
            android:id="@+id/gridbalance"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/menuround"
            android:padding="8dp">
            <!--        balance-->
            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/realwhite"
                android:padding="8dp"
                android:layout_margin="6dp"
                android:layout_centerInParent="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Balance"
                    android:textColor="#000000">

                </TextView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp "
                        android:textColor="#000000">

                    </TextView>
                    <TextView
                        android:id="@+id/showblnc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#000000"></TextView>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:onClick="tomyorderfix">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/order"
                    android:layout_gravity="center"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Order"
                    android:textColor="#000000"
                    android:textSize="10dp"></TextView>

            </LinearLayout>

        </GridLayout>

        <RelativeLayout
            android:layout_marginTop="60dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gridbalance">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">
                    <!--Drink-->
                    <RelativeLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/realwhite"
                        android:layout_centerInParent="true"
                        android:layout_margin="15dp"
                        android:onClick="toDrink">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_centerInParent="true">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:src="@drawable/drink"
                                android:layout_gravity="center">

                            </ImageView>

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:text="Drink"
                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:layout_gravity="center">

                            </TextView>

                        </LinearLayout>

                    </RelativeLayout>
                    <!--Snack-->
                    <RelativeLayout
                        android:onClick="gotosnack"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/realwhite"
                        android:layout_centerInParent="true"
                        android:layout_margin="15dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_centerInParent="true">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:src="@drawable/snack"
                                android:layout_gravity="center">

                            </ImageView>

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:text="Snack"
                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:layout_gravity="center">

                            </TextView>

                        </LinearLayout>

                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">
                    <!--Foods-->
                    <RelativeLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/realwhite"
                        android:layout_centerInParent="true"
                        android:layout_margin="15dp"
                        android:onClick="tofoods">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_centerInParent="true">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:src="@drawable/food"
                                android:layout_gravity="center">

                            </ImageView>

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:text="Foods"
                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:layout_gravity="center">

                            </TextView>

                        </LinearLayout>

                    </RelativeLayout>
                    <!--Topup-->
                    <RelativeLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/realwhite"
                        android:layout_centerInParent="true"
                        android:layout_margin="15dp"
                        android:onClick="topupmenu">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_centerInParent="true">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:src="@drawable/topup"
                                android:layout_gravity="center">

                            </ImageView>

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:text="TopUp"
                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:layout_gravity="center">

                            </TextView>

                        </LinearLayout>

                    </RelativeLayout>


                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>



</RelativeLayout>