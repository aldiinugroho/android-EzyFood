<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TopupActivity"
    android:background="#FFEAB4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:layout_marginTop="50dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textColor="#000000"
            android:textSize="20dp"
            android:gravity="start"
            android:onClick="backmenu">

        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:background="@drawable/menuround"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/realwhite"
                android:padding="8dp"
                android:layout_margin="6dp"
                android:layout_centerHorizontal="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Balance"
                    android:textColor="#000000">

                </TextView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp "
                        android:textColor="#000000">

                    </TextView>
                    <TextView
                        android:id="@+id/displval"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#000000">

                    </TextView>

                </LinearLayout>

            </LinearLayout>

            <EditText
                android:id="@+id/valutop"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:hint="value"
                android:textSize="15dp"
                android:background="@drawable/realwhite">

            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Topup now"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:background="@drawable/reddelete"
                android:layout_marginTop="20dp"
                android:padding="7dp"
                android:textColor="#000000"
                android:onClick="toppupp">

            </TextView>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>